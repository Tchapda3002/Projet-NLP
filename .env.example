# CV Analyzer - Environment Variables

# Debug mode (true/false)
DEBUG=false

# Path to the classifier model
MODEL_PATH=data/models/classifier.pkl

# Default summarization method (tfidf, textrank, frequency)
SUMMARIZE_METHOD=tfidf

# Default number of sentences in summary
NUM_SENTENCES=5

# AWS Configuration (for deployment)
AWS_REGION=eu-west-1
AWS_ACCOUNT_ID=123456789012
ECR_REPOSITORY=cv-analyzer
ECS_CLUSTER=cv-analyzer-cluster
ECS_SERVICE=cv-analyzer-service
