{
  "family": "cv-analyzer-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "cv-analyzer-api",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/cv-analyzer:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DEBUG",
          "value": "false"
        },
        {
          "name": "MODEL_PATH",
          "value": "/app/data/models/classifier.pkl"
        },
        {
          "name": "SUMMARIZE_METHOD",
          "value": "tfidf"
        },
        {
          "name": "NUM_SENTENCES",
          "value": "5"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/cv-analyzer",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "api"
        }
      }
    }
  ]
}
